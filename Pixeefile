# pdf_to_docx.py

from pdf2docx import Converter

def pdf_to_docx(pdf_file, docx_file):
    try:
        # Create a PDF converter object
        cv = Converter(pdf_file)
        
        # Convert PDF to Word (all pages)
        cv.convert(docx_file, start=0, end=None)
        
        # Close the converter
        cv.close()
        print(f"✅ Conversion successful: '{pdf_file}' → '{docx_file}'")
    except Exception as e:
        print(f"❌ Error: {e}")

if __name__ == "__main__":
    # Example usage
    input_pdf = "sample.pdf"      # replace with your PDF path
    output_docx = "output.docx"   # replace with desired Word file name
    pdf_to_docx(input_pdf, output_docx)